<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="actor" class="com.stackroute.domain.Actors">
        <constructor-arg name="name" value="Shahid">
        </constructor-arg>
        <constructor-arg name="gender" value="male">
        </constructor-arg>
        <constructor-arg name="age" value="35">
        </constructor-arg>
    </bean>
    <bean id="movie" class="com.stackroute.domain.Movie" autowire="byName">
        </bean>
</beans>
